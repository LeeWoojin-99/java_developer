package Day1005;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.HashMap;

public class LWJ {
	static HashMap<String, String> map = new HashMap<String, String>();
	
	public static void main(String[] args) throws Exception {
		
		FileWriter fw = new FileWriter("word.txt");
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedReader br2 = new BufferedReader(new FileReader("word.txt"));
		String input = "";
		while(input != "5") {
			printMenu();
			System.out.println(map);
			input = br.readLine();
			switch(input) {
			case "1": addWord(br, fw); break;
			case "2":  break;
			case "3":  break;
			case "4": printWord(br2); break;
			case "5": System.out.println("프로그램을 종료합니다."); break;
			default: System.out.println("잘못된 입력입니다. 다시 입력해주세요."); break;
			}
			
		}
		
		fw.close();
		
	}
	
	static void printMenu() {
		System.out.println("- - - MENU - - -");
		System.out.println("1. 단어 등록");
		System.out.println("2. 단어 검색");
		System.out.println("3. 단어 수정");
		System.out.println("4. 단어 출력");
		System.out.println("5. 종료");
		System.out.println("- - - - - - - - -");
		System.out.print("입력 > ");
	}
	
	static void addWord(BufferedReader br, FileWriter fw) throws IOException {
		String input[] = new String[2];
		System.out.println("등록하실 단어 입력 > ");
		input[0] = br.readLine();
		fw.write(input[0]+"\n");
		
		System.out.println("단어의 의미 입력 > ");
		input[1] = br.readLine();
		fw.write(input[1]+"--\n");
		// "--\n"으로 구분
		
		map.put(input[0], input[1]);
		System.out.println("등록 완료");
	}
	
	static void printWord(BufferedReader br) throws IOException {
		while(true) {
			String line = br.readLine();
			if(line == null) {
				break;
			}else if(line == "--") {
				continue;
			}
			System.out.println(line);
		}
	}
	
}
