package Day0928;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.Iterator;

public class ListEx01 {
	public static void main(String[] args) {
		ArrayList<Integer> list = new ArrayList<>();
//		for(int i=10; i>0; i--) list.add(i);
		for(int i=1; i<11; i++) list.add(i);
		
		// 향상된 for문으로 표현
		for(int i: list) System.out.print(i+" ");
		System.out.println();
		
		// Iterator로 표현
		Iterator<Integer> it = list.iterator();
		while(it.hasNext()) System.out.print(it.next()+" ");
		System.out.println();
		
		// ArrayList형의 instance의 sort method를 이용한 정렬 
		// Comparator 객체 생성하고 compare method를 overriding하여 매개변수로 입력
		list.sort(new Comparator<Integer>() {
			@Override
			public int compare(Integer o1, Integer o2) {
//				return o1.compareTo(o2);
				return o2.compareTo(o1);
			}
		});
		System.out.println(list);
		
		// Collections class의 sort method를 이용한 정렬
		// instance가 아닌 class의 method를 이용
		Collections.sort(list);
		
		String strArr[] = new String[] {"a", "b", "c"};
		ArrayList<String> strList = new ArrayList<String>();
		
		for(String i: strArr) strList.add(i);
		
		System.out.println(strList);
	}
}
