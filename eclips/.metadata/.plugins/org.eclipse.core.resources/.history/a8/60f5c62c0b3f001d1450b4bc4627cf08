package Product;

import java.util.Scanner;

/*
1. 메뉴 추가
2. 메뉴판 보기
3. 메뉴 주문
   메뉴선택 > 수량 > 메뉴로 돌아가기
4. 주문 리스트
5. 프로그램 종료
*/
public class App {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Management MG = new Management();
		
		String input = "";
		
		try {
			loop:
				while(true) {
					MG.printChoice();
					input = sc.next();
					
					switch(input) {
					case "1": MG.addMenu(sc); break;
					case "2": MG.printMenuList(); break;
					case "3": MG.order(sc); break;
					case "4": MG.orderList(); break;
					case "5": break loop;
					default:
						System.out.println("잘못된 입력입니다. 다시 입력해주세요.");
						break;
					}
				}
		} catch (Exception e) {
			System.out.println("예외가 발생되었습니다.");
		}
		System.out.println("프로그램을 종료합니다.");
		sc.close();
	}
}
