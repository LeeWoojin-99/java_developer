package Day1004;

import java.awt.Toolkit;

public class LWJ {
	public static void main(String[] args) {
		
		// 익명 객체를 이용
				Runnable r1 = new Runnable() {
					@Override
					public void run() {
						System.out.println("run");
					}
				};
				Thread t1 = new Thread(r1);
				t1.start();
				
				// 람다식을 이용
				Thread t2 = new Thread(()->{
					System.out.println("run");
				});
				
				// 람다식을 변수에 담아서 사용
				// lambda식을 변수에 담기
				// Runnable로 선언해야 run method를 overiding한다는 것을 인식
				Runnable fi = ()->{
					System.out.println("run");
				};
				Thread t3 = new Thread(fi);
	}
}
