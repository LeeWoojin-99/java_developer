// Management.java

package Product;

import java.util.ArrayList;
import java.util.Scanner;

public class Management {
	ArrayList<Product> list = new ArrayList<>(); // 상품

	public void printChoice() {
		System.out.println("\n- - - 선택지 - - -");
		System.out.println("1. 메뉴 추가");
		System.out.println("2. 메뉴판 보기");
		System.out.println("3. 메뉴 주문");
		System.out.println("4. 주문 리스트");
		System.out.println("5. 프로그램 종료");
		System.out.println("- - - - - - - - - -");
		System.out.print("선택지를 입력해주세요 > ");
	}
	
	public void addMenu(Scanner sc) {
		String menu;
		int price;
		System.out.print("추가하시려는 메뉴의 이름을 입력해주세요 > ");
		menu = sc.next();
		System.out.print("메뉴의 가격을 입력해주세요 > ");
		price = sc.nextInt();
		list.add(new Product(menu, price));
		System.out.println("메뉴가 추가되었습니다.");
	}
	
	public void printMenuList() {
		System.out.println("\n- - - 메뉴판 - - -");
		for(int i=0; i<list.size(); i++) {
			System.out.printf("%d. %s : %d원\n", i+1, list.get(i).getMenu(), list.get(i).getPrice());
		}
		System.out.println("- - - - - - - - - -");
	}
	
	public void order(Scanner sc) {
		int menu, amount;
		System.out.print("주문하실 메뉴의 번호를 입력해주세요 > ");
		menu = sc.nextInt();
		if(0 < menu && menu < list.size()) {
			System.out.print("수량을 입력해주세요 > ");
			amount = sc.nextInt();
			list.get(menu-1).setAmount(list.get(menu-1).getAmount()+amount);
			System.out.println("해당 메뉴의 주문이 추가되었습니다.");
		}else {
			System.out.println("없는 메뉴 번호입니다.");
		}
	}
	
	public void orderList() {
		int sum = 0;
		System.out.println("\n- - - 주문 리스트 - - -");
		for(Product i: list) {
			String menu = i.getMenu();
			int price = i.getPrice(), amount = i.getAmount();
			if(amount > 0) {
				System.out.printf("%s %d개 : %d원\n", menu, amount, price*amount);
				sum += price*amount;
			}
		}
		System.out.println("총 결제 금액 : "+sum+"원");
		System.out.println("- - - - - - - - - -");
	}
	
}
