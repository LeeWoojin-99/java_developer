package Day0928;

import java.util.HashMap;
import java.util.Scanner;

public class Map04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int number;
		
		System.out.println("입력하실 단어의 개수를 입력해주세요 > ");
		number = sc.nextInt();
		HashMap<String, String> map = new HashMap<>();
		for(int i=0; i<number; i++) {
//			HashMap<String, String> map = method();
			map.putAll(method());
		}
		for(String j: map.keySet()) System.out.printf("%s : %s\n", j, map.get(j));
		
		System.out.println("프로그램 종료");
		sc.close();
	}
	
	static HashMap<String, String> method() {
		Scanner scan = new Scanner(System.in);
		String input1, input2;
		System.out.println("단어를 입력해주세요 > ");
		input1 = scan.next();
		System.out.println("의미를 입력해주세요 > ");
		input2 = scan.next();
		HashMap<String, String> map = new HashMap<String, String>();
		map.put(input1, input2);
//		scan.close();
		return map;
		
	}
}
