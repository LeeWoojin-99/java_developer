package Day0928;

import java.util.HashMap;
import java.util.Scanner;

public class Map04 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		HashMap<String, String> map = new HashMap<>();
		
		int number;
		String input1, input2;
		
		System.out.println("입력하실 단어의 개수를 입력해주세요 > ");
		number = sc.nextInt();
		for(int i=0; i<number; i++) {
			System.out.println("단어를 입력해주세요 > ");
			input1 = sc.next();
			System.out.println("의미를 입력해주세요 > ");
			input2 = sc.next();
			
			
		}
		
		for(String i: map.keySet()) System.out.printf("%s : %s\n", i, map.get(i));
		
		sc.close();
	}
	
	static HashMap<String, String> method(String input1, String input2) {
		HashMap<String, String> map = new HashMap<String, String>();
		map.put(input1, input2);
		return map;
		
	}
}
