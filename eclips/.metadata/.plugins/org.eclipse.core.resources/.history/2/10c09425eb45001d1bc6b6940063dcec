package Library;

import java.io.BufferedReader;
import java.io.IOException;
import java.util.ArrayList;

public interface ManagementIF {
	public void printMenu(); // 메뉴 출력
	
	public int selectBook(BufferedReader br) throws IOException; // 책 선택
	
	public void rentalBook(BufferedReader br) throws IOException; // 빌리기
	public void extension(BufferedReader br) throws IOException; // 연장
	public void returnBook(BufferedReader br) throws IOException; // 반납
	
	public void printBookList(); // 책 리스트 정보 조회
	public void printBook(BufferedReader br) throws IOException; // 책 한권의 정보
	
}
