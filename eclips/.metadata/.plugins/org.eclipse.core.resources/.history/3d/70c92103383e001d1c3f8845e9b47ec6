package Day0927;

import java.util.ArrayList;
import java.util.Scanner;

public class List02 {
	public static void main(String[] args) {
		/*		
		메뉴판
		1. 햄버거 : 1.5
		2. 피자 : 2.0
		3. 음료 : 0.2
		4. 과자 : 0.1
		5. 치즈볼 : 0.3
		6. 주문 종료
		7. 프로그램 종료
		
		1 > 수량 선택 > 2개 > 3.0 > 메뉴판
		0 > 주문 종료 > 주문한 메뉴 나타내기
		선택한 메뉴
		햄버거 ~개 : ~~
		피자 ~개 : ~~
		주문하신 금액은 ~~입니다.
		*/
		Scanner sc = new Scanner(System.in);
		
		FoodManager FM = new FoodManager();
		int menu, amount; // 메뉴와 수량
		
		try {
			do {
				FM.printMenu();
				menu = sc.nextInt();
				if(0<menu && menu<6) {
					System.out.println("수량을 입력해주세요");
					amount = sc.nextInt();
					FM.sale(menu, amount);
				}else if(menu == 6) {
					FM.order();
				}else if(menu == 7){
				}else System.out.println("잘못된 입력입니다. 다시 입력해주세요.");
			}while(menu!=7);
			System.out.println("프로그램 종료");
		} catch (Exception e) {
			System.out.println("예외가 발생하였습니다.");
		}
		
		sc.close();
	}
}
class FoodManager{
	ArrayList<String> foods = new ArrayList<>() ; // 음식 종류
	ArrayList<Integer> amount = new ArrayList<>(); // 수량
	ArrayList<Double> price = new ArrayList<>(); // 가격
	double totalPrice; // 주문한 메뉴의 금액이 누적될 변수
	
	public FoodManager(){
		this.addFoodMenu("햄버거", 1.5, 0);
		this.addFoodMenu("피자", 2.0, 0);
		this.addFoodMenu("음료", 0.5, 0);
		this.addFoodMenu("과자", 0.1, 0);
		this.addFoodMenu("치즈볼", 0.3, 0);
		
		System.out.println("생성자 완료"); // test
	}
	
	protected void addFoodMenu(String Food, double price, int amount) {
		foods.add(Food);
		this.price.add(price);
		this.amount.add(amount);
	}
	
	public void printMenu() {
		System.out.println("\n- - - MENU - - -");
		System.out.printf("1. %s : %.1f\n", foods.get(0), price.get(0));
		System.out.printf("2. %s : %.1f\n", foods.get(1), price.get(1));
		System.out.printf("3. %s : %.1f\n", foods.get(2), price.get(2));
		System.out.printf("4. %s : %.1f\n", foods.get(3), price.get(3));
		System.out.printf("5. %s : %.1f\n", foods.get(4), price.get(4));
		System.out.println("6. 주문 종료");
		System.out.println("7. 프로그램 종료");
		System.out.println("- - - - - - - - -");
		System.out.println("메뉴를 입력해주세요 > ");
	}
	
	public void sale(int menu, int count) {
		menu -= 1; // index로 사용하기 위해서 -1
		amount.set(menu, amount.get(menu)+count);
		System.out.printf("%s : %d개\n", foods.get(menu), amount.get(menu));
	}
	
	public void order() {
		System.out.println("\n총 주문하신 메뉴의 개수와 금액입니다.");
		for(int i=0; i<foods.size(); i++) {
			if(amount.get(i) > 0) {
				System.out.printf("%s %d개 : %.1f\n", foods.get(i), amount.get(i), amount.get(i)*price.get(i));
				totalPrice += amount.get(i)*price.get(i);
			}
		}
		System.out.printf("총 주문 금액 : %.1f\n", totalPrice);
	}
}