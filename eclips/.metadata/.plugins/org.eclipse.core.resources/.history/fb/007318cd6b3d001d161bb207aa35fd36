package Lotto;

import java.util.Scanner;

public class Management {
	Lotto lottoUser;
	
	public void printMenu() {
		System.out.println("- - - MENU - - -");
		System.out.println("1. 로또 번호 생성 (수동)");
		System.out.println("2. 로또 번호 생성 (자동)");
		System.out.println("3. 당첨 번호 생성 (수동)");
		System.out.println("4. 당첨 번호 생성 (자동)");
		System.out.println("5. 당첨 확인");
		System.out.println("6. 당첨 번호 내역 확인");
		System.out.println("7. 종료");
	}
	
	public void createLotto(Scanner sc) throws Exception{
		String inputStrArr[];
		int inputIntArr[];
		
		System.out.println("로또 번호를 입력해주세요.");
		inputStrArr = sc.nextLine().split(" ");
		inputIntArr = new int[inputStrArr.length];
		
		if(inputStrArr.length != 6) {
			throw new RuntimeException("로또 번호의 개수가 올바르지 않습니다.");
		}
		
		// 입력받은 값을 int형으로 변환
		for(int i=0; i<inputStrArr.length; i++) {
			inputIntArr[i] = Integer.parseInt(inputStrArr[i]);
		}
	}
	
	public void createLottoAuto() {
		
		System.out.println("로또 번호 생성이 완료되었습니다.");
	}
}
