package Product;

import java.util.ArrayList;
import java.util.Scanner;

/*
menu
1. 메뉴 추가
2. 메뉴판 보기
3. 메뉴 주문
   메뉴선택 > 수량 > 메뉴로 돌아가기
4. 주문 리스트
5. 프로그램 종료
*/
public class Management {
	ArrayList<Product> list = new ArrayList<>(); // 상품

	public void printMenu() {
		System.out.println("- - - 선택지 - - -");
		System.out.println("1. 메뉴 추가");
		System.out.println("2. 메뉴판 보기");
		System.out.println("3. 메뉴 주문");
		System.out.println("4. 주문 리스트");
		System.out.println("5. 프로그램 종료");
		System.out.println("- - - - - - - - - -");
		System.out.print("선택지를 입력해주세요 > ");
	}
	
	public void addMenu(Scanner sc) {
		String menu;
		int price;
		System.out.print("추가하시려는 메뉴의 이름을 입력해주세요 > ");
		menu = sc.next();
		System.out.print("메뉴의 가격을 입력해주세요 > ");
		price = sc.nextInt();
		list.add(new Product(menu, price));
		System.out.println("메뉴가 추가되었습니다.");
	}
	
	public void printMenuList() {
		System.out.println("- - - 메뉴판 - - -");
		for(int i=0; i<list.size(); i++) {
			System.out.printf("%d. %s : %d원\n", i+1, list.get(i));
			list.get(i)
		}
		System.out.println("- - - - - - - - - -");
	}
	
}
