package Bank;

import java.io.BufferedReader;
import java.io.IOException;
import java.util.ArrayList;

public class Management {
	ArrayList<Account> list = new ArrayList<>();
	
	public void printMenu() {
		System.out.println("- - - MENU - - -");
		System.out.println("1. 계좌 등록");
		System.out.println("2. 계좌 입금");
		System.out.println("3. 계좌 출금");
		System.out.println("4. 계좌 목록 확인");
		System.out.println("종료하시려면 q를 입력해주세요");
		System.out.println("- - - - - - - - -");
		System.out.print("입력 > ");
	}

	public Account createAccount(BufferedReader br) throws IOException {
		String name;
		long balance;
		System.out.print("소유주 이름 입력 > ");
		name = br.readLine();
		System.out.print("초기 잔고 입력 > ");
		balance = Long.parseLong(br.readLine());
		
		return new Account(name, balance);
	}
	
	public void withdraw(BufferedReader br, int accountNumber) throws NumberFormatException, IOException { // 출금
		long balance = list.get(accountNumber).getBalance();
		System.out.print("출금 금액 입력 > ");
		long money = Long.parseLong(br.readLine());
		if(balance < money) {
			System.out.println("잔고 부족");
			return;
		}else {
			list.get(accountNumber).setBalance(balance-money);
		}
	}
	public void deposit(BufferedReader br, int accountNumber) throws NumberFormatException, IOException { // 입금
		long balance = list.get(accountNumber).getBalance();
		System.out.print("입금 금액 입력 > ");
		long money = Long.parseLong(br.readLine());
	}

}
