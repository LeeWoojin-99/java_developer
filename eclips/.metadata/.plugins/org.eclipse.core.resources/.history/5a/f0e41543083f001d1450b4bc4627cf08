package Product;

import java.util.ArrayList;
import java.util.Scanner;

/*
상품들을 class로 구성하여 상품을 등록 및 출력

상품 등록 y n
메뉴 : 햄버거
가격 : 15000

menu
1. 메뉴 추가
2. 메뉴판 보기
3. 메뉴 주문
   메뉴선택 > 수량 > 메뉴로 돌아가기
4. 주문 리스트
5. 프로그램 종료
*/
public class App {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Management MG = new Management();
		
		String input = "";
		
		while(! input.equals("6")) {
			MG.printChoice();
			input = sc.next();
			
			switch(input) {
			case "1":
				System.out.println("asdf");
				MG.addMenu(sc);
				break;
			case "2":
				MG.printMenuList();
				break;
			case "3":
				break;

			case "4":
				break;

			case "5":
				break;

			default:
				break;

			}
		}
		
		sc.close();
	}
}
