package Day0929;

import java.util.HashMap;
import java.util.Scanner;

/*
map을 이용
한 학생의 성적을 관리하는 프로그램
성적 추가
성적 조회 (국어 영어 수학 등 모든 성적을 조회)
성적 조회 (원하는 한 과목의 성적만 조회)
성적 수정
프로그램 종료

성적 추가
국어
100

전체 조회시에는 합계와 평균도 출력
*/
public class LWJ {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		HashMap<String, Integer> map = new HashMap<>();
		
		int input = 0;
		while(input != 5) {
			System.out.println("");
		}
		
		
		System.out.println(map);
		sc.close();
	}
	
	static HashMap<String, Integer> insert(Scanner sc, HashMap<String, Integer> map) {
		String subject;
		int score;
		System.out.println("과목 입력 > ");
		subject = sc.next();
		System.out.println("점수 입력 > ");
		score = sc.nextInt();
		
		map.put(subject, score);
		
		return map;
	}
	
	static void print(HashMap<String, Integer> map) {
		
		return;
	}
	
	// printSub
	// modify
}
