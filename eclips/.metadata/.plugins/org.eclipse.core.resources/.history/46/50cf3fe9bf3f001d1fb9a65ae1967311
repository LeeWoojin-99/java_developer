// 12:15 완성

package Word;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class App {
	public static void main(String[] args) {
		/*
		1. 단어 등록
		2. 단어 검색
		3. 단어 수정
		4. 단어 리스트
		5. 종료
		*/
		Scanner sc = new Scanner(System.in);
		int input = 0;
		Management MG = new Management();
		while(input != 5) {
			MG.printChoice();
			input = sc.nextInt();
			
			switch(input) {
			case 1:
				MG.add(sc);
				break;
			case 2:
				MG.search(sc);
				break;
			case 3:
				MG.modify(sc);
				break;
			case 4:
				MG.printList();
				break;
			case 5:
				break;
			default:
				System.out.println("잘못된 입력입니다. 다시 입력해주세요.");
				break;
			}
		}
		System.out.println("프로그램을 종료합니다.");
		sc.close();
	}
}

class Management{
	ArrayList<Word> list = new ArrayList<>();
	
	public void printChoice() {
		System.out.println("\n- - - 선택지 - - -");
		System.out.println("1. 단어 등록");
		System.out.println("2. 단어 검색");
		System.out.println("3. 단어 수정");
		System.out.println("4. 단어 리스트");
		System.out.println("5. 종료");
		System.out.println("- - - - - - - - - -");
		System.out.println("선택지의 번호를 입력해주세요");
	}
	public void add(Scanner sc) {
		String word, meaning;
		System.out.println("단어 > ");
		word = sc.next();
		System.out.println("의미 > ");
		meaning = sc.next();
		list.add(new Word(word, meaning));
		System.out.println("단어 등록이 완료되었습니다.");
	}
	public void printList() {
		System.out.println("\n- - - 단어 리스트 - - -");
		Collections.sort(list);
		for(Word i: list) {
			i.print();
		}
		System.out.println("- - - - - - - - - -");
	}
	public int modify(Scanner sc) {
		System.out.println("수정하실 단어를 입력해주세요 > ");
		String input = sc.next();
		for(Word i: list) {
			if(i.getWord().equals(input)) {
				System.out.println("수정하실 의미를 입력해주세요 > ");
				input = sc.next();
				String before = i.getMeaning();
				i.setMeaning(input);
				System.out.printf("수정 전 의미 : %s\n수정 후 의미 : %s\n", before, i.getMeaning());
				return 0;
			}
		}
		System.out.println("입력하신 단어가 없습니다.");
		return 0;
	}
	public int search(Scanner sc) {
		System.out.println("검색하실 단어를 입력해주세요 > ");
		String input = sc.next();
		for(Word i: list) {
			if(input.equals(i.getWord())) {
				System.out.printf("검색하신 단어 : %s\n단어의 의미 : %s\n", i.getWord(), i.getMeaning());
				return 0;
			}
		}
		System.out.println("입력하신 단어가 없습니다.");
		return 0;
	}
	
}

class Word implements Comparable<Word> {
	String word, meaning;
	
	public Word() {}
	public Word(String word, String meaning) {
		this.word = word;
		this.meaning = meaning;
	}
	public void print() {
		System.out.printf("%s : %s\n", word, meaning);
	}
	
	// getter setter
	public String getWord() {
		return word;
	}
	public void setWord(String word) {
		this.word = word;
	}
	public String getMeaning() {
		return meaning;
	}
	public void setMeaning(String meaning) {
		this.meaning = meaning;
	}
	@Override
	public int compareTo(Word o) {
		// TODO Auto-generated method stub
		return o.getWord().compareTo(word);
	}
	
	
}
