package Day0927;

import java.util.ArrayList;
import java.util.Scanner;

public class List02 {
	public static void main(String[] args) {
		/*		
		메뉴판
		1. 햄버거 : 1.5
		2. 피자 : 2.0
		3. 음료 : 0.2
		4. 과자 : 0.1
		5. 사탕 : 0.05
		6. 주문 종료
		7. 프로그램 종료
		
		1 > 수량 선택 > 2개 > 3.0 > 메뉴판
		0 > 주문 종료 > 주문한 메뉴 나타내기
		선택한 메뉴
		햄버거 ~개 : ~~
		피자 ~개 : ~~
		주문하신 금액은 ~~입니다.
		*/
		Scanner sc = new Scanner(System.in);
		FoodManager FM = new FoodManager();
		int menu, amount;
		do {
			FM.printMenu();
			menu = sc.nextInt();
			if(0<menu && menu<6) {
				System.out.println("수량을 입력해주세요");
				amount = sc.nextInt();
				FM.sale(menu, amount);
			}else if(menu == 6) {
				FM.order();
			}
		}while(menu!=7);
		System.out.println("프로그램 종료");
		sc.close();
	}
}
class FoodManager{
	ArrayList<String> foods = new ArrayList<>() ; // 음식 종류
	ArrayList<Integer> amount = new ArrayList<>(); // 수량
	ArrayList<Double> price = new ArrayList<>(); // 가격
	int totalPrice;
	
	public FoodManager(){
		// 음식 종류
		foods.add(null);
		foods.add("햄버거");
		foods.add("피자");
		foods.add("음료");
		foods.add("과자");
		foods.add("사탕");
		
		// 각 음식의 가격
		price.add(null);
		price.add(1.5);
		price.add(2.0);
		price.add(0.2);
		price.add(0.1);
		price.add(0.05);
		
		// 각 음식의 개수
		amount.add(null);
		amount.add(0);
		amount.add(0);
		amount.add(0);
		amount.add(0);
		amount.add(0);
		
		System.out.println("생성자 완료"); // test
	}
	
	public void printMenu() {
		System.out.println("- - - MENU - - -");
		System.out.println("1. 햄버거 : 1.5");
		System.out.println("2. 피자 : 2.0");
		System.out.println("3. 음료 : 0.2");
		System.out.println("4. 과자 : 0.1");
		System.out.println("5. 사탕 : 0.05");
		System.out.println("6. 주문 종료");
		System.out.println("7. 프로그램 종료");
		System.out.println("- - - - - - - - -");
		System.out.println("메뉴를 입력해주세요 > ");
	}
	
	public void sale(int menu, int count) {
		amount.set(menu, amount.get(menu)+count);
		System.out.printf("%s : %d개\n", foods.get(menu), amount.get(menu));
	}
	
	public void order() {
		
	}
	
}